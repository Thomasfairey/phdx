FROM python:3.11-slim

WORKDIR /app

# Install only production dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir fastapi uvicorn pydantic python-docx google-auth google-auth-oauthlib google-api-python-client anthropic openai

# Copy only necessary files
COPY api/ ./api/
COPY core/ ./core/

# Create backups directory
RUN mkdir -p backups

EXPOSE 8000

CMD ["python", "-m", "uvicorn", "api.server:app", "--host", "0.0.0.0", "--port", "8000"]
