# PHDx Production Environment Configuration
# ==========================================
# Copy this to .env and fill in values for production deployment

# Environment
PHDX_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=https://phdx.ai,https://www.phdx.ai

# Rate Limiting
RATE_LIMIT_RPM=60

# ===========================================
# REQUIRED API KEYS
# ===========================================

# Anthropic Claude (required for AI features)
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# OpenAI (optional, for auditor model)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o

# Google Gemini (optional, for heavy-lift operations)
GOOGLE_API_KEY=your-google-api-key
GOOGLE_MODEL=gemini-1.5-pro

# ===========================================
# VECTOR DATABASE
# ===========================================

# Pinecone (required for production)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX=phdx-thesis

# ===========================================
# GOOGLE OAUTH (for document access)
# ===========================================

GOOGLE_CLIENT_SECRET_PATH=config/client_secret.json
GOOGLE_TOKEN_PATH=config/token.json

# ===========================================
# OPTIONAL INTEGRATIONS
# ===========================================

# Zotero Bibliography
ZOTERO_USER_ID=
ZOTERO_API_KEY=

# Feature Flags
ENABLE_GOOGLE_AUTH=true
ENABLE_SPACY_NER=true
ENABLE_USAGE_LOGGING=true
MOCK_MODE=false
